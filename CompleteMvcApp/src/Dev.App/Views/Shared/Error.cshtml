@model ErrorViewModel
@{

    ViewData["Title"] = Model == null ? "An error occurred" : Model.Title;

}

@{
    if (Model == null)
    {
        <div>
            <h2>Ooops! An error has occurred, but don't worry! Our support team will be informed and we'll fix it soon!</h2>
        </div>
    }
    else
    {
        <h1>@Html.Raw(Model.Title)</h1>
        <h2 class="text-danger">@Html.Raw(Model.Message)</h2>

    }
}